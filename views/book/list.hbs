<h3><a class="btn btn-secondary" href="/book"><i class="fa fa-plus"></i> Create New</a> book List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author / Publication</th>
            <th>Price</th>
            <th>Condition</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/book/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/book/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

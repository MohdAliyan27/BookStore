<h3>{{viewTitle}}</h3>

<form action="/book" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{book._id}}">
    <div class="form-group">
        <label>Book Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Book Name" value="{{book.fullName}}">
        <div class="text-danger">
            {{book.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Author / Publication</label>
        <input type="text" class="form-control" name="email" placeholder="Author / Publication" value="{{book.email}}">
        <div class="text-danger">
            {{book.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="text" class="form-control" name="mobile" placeholder="Price" value="{{book.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>Condition</label>
            <input type="text" class="form-control" name="city" placeholder="Condition" value="{{book.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/book/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
